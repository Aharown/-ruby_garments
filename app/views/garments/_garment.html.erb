<%= link_to garment_path(garment) do %>
  <% if garment.photos.attached? %>
    <div class="card-garment <%= 'show-page' if show_all_photos %>">

      <% if show_all_photos %>
        <!-- Show all photos for the garment -->
        <% garment.photos.each do |photo| %>
          <%= image_tag photo.service_url, class="card-garment-img" alt="<%= garment.title %>">
        <% end %>
      <% else %>
        <!-- Show only the first photo on the index page -->
        <%= image_tag garment.photos.first.service_url, class="card-garment-img", alt: garment.title %>
      <% end %>

      <!-- Garment Info Section -->
      <div class="card-garment-infos">
        <!-- Garment Title -->
        <p class="garment-title"><%= garment.title %></p>
        <!-- Rental Price -->
        <p class="card-garment-pricing">â‚¬<%= garment.rental_price %> per day</p>
        <p class="garment-size">Size: <%= garment.size %></p>
        <!-- Brand -->
        <p class="garment-brand"><%= garment.brand %></p>
      </div>
    </div>
  <% end %>
<% end %>
