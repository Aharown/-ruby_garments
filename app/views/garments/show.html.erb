<div class="show-page-container">
  <div class="main-wrapper">
    <div class="styles-container-grid">
      <div class="styles-images-container">
        <% if @garment.photos.attached? %>
          <% @garment.photos.each do |photo| %>
            <img src="<%= url_for(photo) %>" class="garment-image" alt="<%= @garment.title %>">
          <% end %>
        <% end %>
      </div>
      <div class="styles-info-container">
        <!-- You can display additional information about the garment here -->
        <h1><%= @garment.title %></h1>
        <p>Price: â‚¬<%= @garment.rental_price %> per day</p>
        <p>Size: <%= @garment.size %></p>
        <p>Brand: <%= @garment.brand %></p>
        <p>Details: <%= @garment.description %></p>

        <button class="rent-button">Rent</button>
        <% if @garment.user_id == current_user.id %>
          <%= button_to 'Delete Garment', garment_path(@garment), method: :delete, data: { confirm: 'Are you sure you want to delete this garment?' }, class: "rent-button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
