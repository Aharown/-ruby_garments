<!-- app/views/garments/new.html.erb -->
<h2>Create a New Garment</h2>

<%= form_with(model: @garment, local: true, html: { multipart: true }) do |form| %>
  <div class="form-group">
    <%= form.label :title, "Title" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter the garment title" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control", rows: 3, placeholder: "Describe the garment" %>
  </div>

  <div class="form-group">
    <%= form.label :category, "Category" %>
    <%= form.text_field :category, class: "form-control", placeholder: "Enter the category (e.g., Jackets)" %>
  </div>

  <div class="form-group">
    <%= form.label :brand, "Brand" %>
    <%= form.text_field :brand, class: "form-control", placeholder: "Enter the brand (e.g., Nike)" %>
  </div>

  <div class="form-group">
    <%= form.label :size, "Size" %>
    <%= form.text_field :size, class: "form-control", placeholder: "Enter the size (e.g., M, L)" %>
  </div>

  <div class="form-group">
    <%= form.label :rental_price, "Rental Price (â‚¬)" %>
    <%= form.number_field :rental_price, class: "form-control", placeholder: "Enter the rental price per day" %>
  </div>

  <!-- File Uploads -->
  <div class="form-group">
    <%= form.label :photos, "Upload Photos" %>
    <%= form.file_field :photos, multiple: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Garment", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back to Garments', garments_path, class: "btn btn-secondary" %>
