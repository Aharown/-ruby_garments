<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <div class="d-flex align-items-center me-auto">
      <%= link_to garments_path, class: "d-flex align-items-center" do %>
        <i class="fa-solid fa-gem" style="font-size: 24px;"></i>
        <span class="navbar-brand-name ms-2 spectral-extralight">RUBY GARMENTS</span>
      <% end %>

    <div class="search-container">
      <%= simple_form_for :search, url: garments_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search for..." />
          <button name="button" type="submit" class="btn btn-ghost">
            <i class="fas fa-search"></i>
          </button>
        </div>
      <% end %>
    </div>

    <div class="dropdown-container">
      <%= simple_form_for :search, url: garments_path || "/", method: :get do |f| %>
        <div class="dropdown-form-control form-group">
          <%= f.input :category, collection: @categories.map { |category| [category.name, category.id] }, prompt: 'Select Category', label: false, input_html: { class: 'form-control dropdown-select' } %>
        </div>
      <% end %>
   </div>
</div>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="d-flex align-items-center">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
            <a href="#" id="navbarDropdown" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Profile">
              <i class="fas fa-user-circle"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "nav-link ms-2" %>
      <% end %>
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "<i class='fas fa-home'></i>".html_safe, "#", class: "nav-link", title: "Home" %>
          </li>
          <li class="nav-item">
            <%= link_to "<i class='fas fa-envelope'></i>".html_safe, "#", class: "nav-link", title: "Messages" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
